@using Sandbox;
@using Sandbox.UI;
@attribute [StyleSheet]
@attribute [Title( "Home Main HUD" )]
@attribute [Category( "Home - UI" )]
@attribute [Icon( "domain_verification", "red", "white" )]
@inherits PanelComponent

@namespace Home.UI

<root>

    <PlayerInfo LocalPlayer=@LocalPlayer />

    <Crosshair />

    <InventoryPanel Inventory=@(LocalPlayer?.Data.Inventory ?? null) />

</root>

@code
{
    
    [Property] public HomeMainMenuComponent PauseMenu { get; set; }

    HomePlayer LocalPlayer
	{
		get
		{
			if ( _localPlayer == null )
				_localPlayer = HomePlayer.Local;

			return _localPlayer;
		}
	}
	HomePlayer _localPlayer;

    public override void Update()
    {
        SetClass("hidden", PauseMenu?.IsOpen ?? false);
    }

}

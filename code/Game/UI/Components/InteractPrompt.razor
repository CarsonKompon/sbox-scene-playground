@using Sandbox;
@using Sandbox.UI;
@attribute [StyleSheet]
@attribute [Title( "Interact Prompt" )]
@attribute [Category( "Home - UI" )]
@attribute [Icon( "cast", "red", "white" )]
@inherits PanelComponent

@namespace Home.UI

<root>

    <div class="prompt">

        @if (!string.IsNullOrEmpty(InputGlyph))
        {
            <InputGlyph button=@InputGlyph size="small" />
        }

        <p>@Message</p>

    </div>

</root>

@code
{
    [Property] public string Message { get; set; } = "Interact";
    [Property] public string InputGlyph { get; set; } = "Interact";

    protected override int BuildHash()
    {
        return HashCode.Combine(Message);
    }

}

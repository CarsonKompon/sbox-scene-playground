@using Sandbox;
@using Sandbox.UI;
@attribute [StyleSheet]
@inherits Panel

@namespace Home.UI

<root>

    @if(Player?.Grabbing is not null)
    {
        
    }
    else if(Player?.CanGrab ?? false)
    {
        <i>pan_tool</i>
    }
    else
    {
        <div class="dot" />
    }

</root>

@code
{
    public HomePlayer Player;
    
    public override void Tick()
    {
        SetClass("hidden", !Player?.IsFirstPerson ?? false);
    }

    protected override int BuildHash()
    {
        return HashCode.Combine(Player?.CanGrab ?? false, Player?.Grabbing ?? null);
    }

}
